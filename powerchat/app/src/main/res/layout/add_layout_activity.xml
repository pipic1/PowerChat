<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- The ActionBar displayed at the top -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarAlertDialog"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/app_bar_width"
        android:minHeight="?attr/actionBarSize"
        android:title="@string/ajouter_un_titre"
        android:background="?attr/colorPrimaryDark">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/popview_text_1"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"/>
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/subject_edit_text"
        android:layout_marginLeft="8dp" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/popview_text_2"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"/>
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/description_edit_text"
        android:inputType="textAutoComplete"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_string"
        android:id="@+id/validate_topic"
        android:layout_gravity="right"
        android:layout_marginRight="8dp" />


</LinearLayout>
